@page
@model RazorPhones.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Modern Phone database in Razor Pages 2024 edition</h1>
      <table>
          <tr>
              <th>ID</th>
              <th>Make</th>
              <th>Model</th>
              <th>RAM</th>
              <th>PublishDate </th>
              <th>Created</th>
              <th>Modified</th>
          </tr>
        @{
            for(int i = 0; i < 4; i++)
            {
             <tr>
              @{
                for(int j = i; j <=i; j++)
                    {
                      <td>@Model.Phones[j].Id</td>
                      <td>@Model.Phones[j].Make</td>
                      <td>@Model.Phones[j].Model</td>
                      <td>@Model.Phones[j]].RAM</td>
                      <td>@Model.Phones[j].PublishDate</td>
                      <td>@Model.Phones[j].Created</td>
                      <td>@Model.Phones[j].Modified</td>
                     }
                    }
                </tr>
            }
         }
       </table>
    
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
